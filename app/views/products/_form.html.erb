<div class="right_col" role="main">
   <div class="">
      
      <div class="page-title">
         <div class="title_left" style="padding-bottom: 10px;">
            <h3><a href="<%= products_path %>">Products</a></h3>
         </div>
      </div>

      <div class="clearfix"></div>
      
      <div class="row">
         <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
               
               <div class="x_title">
                  <h2><%= action_name.capitalize %> Product</h2>
                  <ul class="nav navbar-right panel_toolbox">
                     <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                     </li>
                     <li><a class="close-link"><i class="fa fa-close"></i></a>
                     </li>
                  </ul>
                  <div class="clearfix"></div>
               </div>

               <div class="x_content">
                  <br/>
                  <%= form_for @product, :html => {:class => "form-horizontal form-label-left"}, :url => @url do |product| %>
                     <div class="form-group">
                        <%= product.label :name, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           <%= product.text_field :name, :class => "form-control col-md-7 col-xs-12" %>
                        </div>
                     </div>
                     <div class="form-group">
                        <%= product.label :price, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           <%= product.number_field :price, :class => "form-control col-md-7 col-xs-12" %>
                        </div>
                     </div>

                     <div class="form-group">
                        <%= product.label :category_id, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
                       <div class="col-md-6 col-sm-6 col-xs-12">
                         <%= select_tag "product[category_id]", options_from_collection_for_select(select_catagory_tag_helper, "id", "name", @product.category_id ), :include_blank => true, :class => "form-control", :required => true %>
                        </div>  
                     </div>  

                     <div class="form-group">
                        <%= product.label :product_image, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           <%= product.file_field :product_image, :class => "form-control col-md-7 col-xs-12" %>
                        </div>
                     </div>

                      <div class="form-group">
                        <%= product.label :description, :class => "control-label col-md-3 col-sm-3 col-xs-12" %>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                           <%= product.text_area :description, :class => "form-control col-md-7 col-xs-12" %>
                        </div>
                     </div>

                     <div class="ln_solid"></div>
                     <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                           <%= link_to "Cancel", products_path, :class => "btn btn-primary" %>
                           <%= product.submit "Submit", :class => "btn btn-success" %>
                        </div>
                     </div>
                  <%end%>
               </div>

            </div>
         </div>
      </div>
    </div>
</div>